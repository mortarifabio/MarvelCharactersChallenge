<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelCharactersChallenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_200</item>
        <item name="colorSecondaryVariant">@color/yellow_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InternetUnavaiablaAlert">
        <item name="android:background">@color/yellow_700</item>
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/load_message_size</item>
    </style>

    <style name="ListMessages">
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/load_message_size</item>
    </style>

    <style name="TextInputLayoutSearch" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="startIconTint">@color/grey</item>
    </style>

    <style name="ButtonSearch" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@drawable/ic_baseline_search_24</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
    </style>

    <style name="CharacterCard">
        <item name="android:layout_margin">@dimen/margin_half</item>
        <item name="cardForegroundColor">@color/grey_20</item>
    </style>

    <style name="CharacterCardName">
        <item name="android:layout_marginBottom">@dimen/margin_quarter</item>
        <item name="android:layout_marginEnd">@dimen/margin_half</item>
        <item name="android:layout_marginStart">@dimen/margin_half</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/character_card_name_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CharacterName" parent="CharacterCardName">
        <item name="android:textSize">@dimen/character_name_size</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
    </style>

</resources>